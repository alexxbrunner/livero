// Prisma schema for Livero - City-based Interior & Furniture Aggregation Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STORE
  ADMIN
  CUSTOMER
}

enum StoreStatus {
  PENDING
  ACTIVE
  PAUSED
  REJECTED
}

enum Platform {
  SHOPIFY
  WOOCOMMERCE
  SHOPWARE
}

enum SyncStatus {
  SUCCESS
  FAILED
  IN_PROGRESS
}

enum EventType {
  VIEW
  CLICK
  REQUEST
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(STORE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store    Store?
  admin    Admin?
  customer Customer?
}

model Admin {
  id     String @id @default(cuid())
  userId String @unique
  name   String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Customer {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  favorites Favorite[]
}

model Favorite {
  id         String   @id @default(cuid())
  customerId String
  productId  String
  createdAt  DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([customerId, productId])
  @@index([customerId])
  @@index([productId])
}

model City {
  id      String @id @default(cuid())
  name    String
  slug    String @unique
  country String
  currency String @default("EUR")
  monthlyFee Decimal @default(500) // Store membership fee
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stores   Store[]
  products Product[]

  @@index([slug])
}

model Store {
  id          String      @id @default(cuid())
  userId      String      @unique
  cityId      String
  name        String
  slug        String      @unique
  description String?
  logoUrl     String?
  websiteUrl  String?
  platform    Platform
  credentials Json // Encrypted store credentials
  status      StoreStatus @default(PENDING)
  lastSyncAt  DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  city     City      @relation(fields: [cityId], references: [id])
  products Product[]
  syncLogs SyncLog[]

  @@index([cityId])
  @@index([slug])
  @@index([status])
}

model Product {
  id           String   @id @default(cuid())
  storeId      String
  cityId       String
  externalId   String // ID from external platform
  title        String
  description  String?
  price        Decimal
  currency     String   @default("EUR")
  images       Json? // Array of image URLs
  category     String?
  availability Boolean  @default(true)
  sku          String?
  url          String? // Link to product on store website
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  store     Store      @relation(fields: [storeId], references: [id], onDelete: Cascade)
  city      City       @relation(fields: [cityId], references: [id])
  events    Event[]
  favorites Favorite[]

  @@unique([storeId, externalId])
  @@index([cityId])
  @@index([storeId])
  @@index([availability])
  @@index([category])
}

model Event {
  id        String    @id @default(cuid())
  productId String
  type      EventType
  metadata  Json? // Additional tracking data
  createdAt DateTime  @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([type])
  @@index([createdAt])
}

model SyncLog {
  id          String     @id @default(cuid())
  storeId     String
  status      SyncStatus
  message     String?
  itemsSynced Int        @default(0)
  errors      Json? // Array of error details
  startedAt   DateTime   @default(now())
  completedAt DateTime?

  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@index([storeId])
  @@index([status])
  @@index([startedAt])
}

